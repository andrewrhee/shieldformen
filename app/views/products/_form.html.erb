    <%= f.label :price %><br />
    <%= f.text_field :price, :size => 50, 
              :class => 'formInputText' %>
  </div>
  <div class="field">
    <%= f.label :stock %><br />
    <%= f.number_field :stock, :size => 50, 
              :class => 'formInputText' %>
  </div>
  <div class="field">
    <%= f.label :size_id %><br />
