<div id="content">
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Password digest:</b>
  <%= @user.password_digest %>
</p>

<p>
	<b>Discount codes:</b>
	<% if @user.discounts.any? %>
		<ol class="discounts">
			<%= render @discounts %>
		</ol>
	<% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
</div>