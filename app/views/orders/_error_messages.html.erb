<% if @order.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <h2>The form contains <%= pluralize(@order.errors.count, "error") %>.</h2>
    </div>
    <ul>
    <% @order.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>