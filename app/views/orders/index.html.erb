<div id="content">
<h1>Listing orders</h1>

<table class="bordered">
  <tr>
	<th>Id</th>
	<th>Date/Time</th>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Address</th>
	<th>Email</th>
	<th>Price</th>
	<th>Status</th>
	<th>Discount Code</th>
	<th>Show</th>
	<th>Edit</th>
	<th>Destroy</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
	<td><%= order.id %></td>
	<td><%= order.created_at %></td>
	<td><%= order.bill_to_first_name %></td>
	<td><%= order.bill_to_last_name %></td>
	<td><%= order.bill_to_address %></td>
	<td><%= order.email %></td>
	<% if order.discount_price %>
		<td><%= number_to_currency(order.discount_price) %></td>
	<% else %>
		<td><%= number_to_currency(order.price) %></td>
	<% end %>
	<td><%= order.status %></td>
	<td><%= order.discount_code %></td>
	<td><%= link_to 'Show', order %></td>
	<td><%= link_to 'Edit', edit_order_path(order) %></td>
	<td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= will_paginate @orders %></p>
</div>