<div id="content">
<h1>Listing orders</h1>

<table>
  <tr>
    <th>Order Id</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Address</th>
    <th>City</th>
    <th>Postal Code</th>
    <th>Email</th>
    <th>Price</th>
    <th>Status</th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.bill_to_first_name %></td>
    <td><%= order.bill_to_last_name %></td>
    <td><%= order.bill_to_address %></td>
    <td><%= order.bill_to_city %></td>
    <td><%= order.bill_to_postal_code %></td>
    <td><%= order.email %></td>
    <td><%= number_to_currency(order.price) %></td>
    <td><%= order.status %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= will_paginate @orders %></p>
</div>