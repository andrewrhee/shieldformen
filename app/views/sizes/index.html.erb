<div id="content">
<h1>Listing sizes</h1>

<table class="bordered">
  <tr>
    <th>Size</th>
    <th>Product Id</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @sizes.each do |size| %>
  <tr>
    <td><%= size.size %></td>
    <td><%= size.product_id %></td>
    <td><%= link_to 'Show', size %></td>
    <td><%= link_to 'Edit', edit_size_path(size) %></td>
    <td><%= link_to 'Destroy', size, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Size', new_size_path %>
</div>
